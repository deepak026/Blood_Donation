<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="donordata.donorDataViewController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#e42323" height="45.0" stroke="#e42323" strokeType="INSIDE" width="800.0" />
      <Button fx:id="goBack" layoutX="8.0" layoutY="10.0" mnemonicParsing="false" onAction="#goHistory" style="-fx-background-color: #e42323;" text="Go back" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <ComboBox fx:id="combobgroup" layoutX="68.0" layoutY="90.0" prefHeight="30.0" prefWidth="180.0" promptText="Select Blood Group" />
      <Button layoutX="414.0" layoutY="90.0" mnemonicParsing="false" onAction="#doShowAll" prefHeight="30.0" prefWidth="100.0" text="Show All">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <TableView fx:id="tblGrid" layoutX="58.0" layoutY="158.0" prefHeight="438.0" prefWidth="671.0" />
      <Button layoutX="276.0" layoutY="90.0" mnemonicParsing="false" onAction="#doFetchAll" prefHeight="30.0" prefWidth="100.0" text="Fetch Data">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
